{
  "scenarioName": "CRUD unit",
  "steps": [
    {
      "name": "POST_unit_parent1",
      "url": "/unit",
      "operation": "POST",
      "request": {
        "headers": {
          "Accept": "application/json;charset=UTF-8"
        },
        "body": {
          "title": "title1",
          "unitLevel": 1
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "title": "${$.POST_unit_parent1.request.body.title}",
          "unitLevel": "$EQ.${$.POST_unit_parent1.request.body.unitLevel}",
          "unitId": "$NOT.NULL"
        }
      }
    },

    {
      "name": "POST_unit_parent2",
      "url": "/unit",
      "operation": "POST",
      "request": {
        "headers": {
          "Accept": "application/json;charset=UTF-8"
        },
        "body": {
          "title": "title1",
          "unitLevel": 1
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "title": "${$.POST_unit_parent2.request.body.title}",
          "unitLevel": "$EQ.${$.POST_unit_parent2.request.body.unitLevel}",
          "unitId": "$NOT.NULL"
        }
      }
    },



    {
      "name": "POST_unit_child",
      "url": "/unit",
      "operation": "POST",
      "request": {
        "headers": {
          "Accept": "application/json;charset=UTF-8"
        },
        "body": {
          "title": "title2",
          "parentId": "${$.POST_unit_parent1.response.body.unitId}",
          "unitLevel": 2
        }
      },
      "assertions": {
        "status": 200,
        "body": {
          "title": "${$.POST_unit_child.request.body.title}",
          "parentId": "$EQ.${$.POST_unit_parent1.response.body.unitId}",
          "unitLevel": "$EQ.${$.POST_unit_child.request.body.unitLevel}",
          "unitId": "$NOT.NULL"
        }
      }
    },



    {
      "name": "GET_unit",
      "url": "/unit",
      "operation": "GET",
      "request": {
      },
      "assertions": {
        "status": 200,
        "body": [
          {
            "title": "${$.POST_unit_parent1.response.body.title}",
            "unitLevel": "$EQ.${$.POST_unit_parent1.response.body.unitLevel}",
            "unitId": "$EQ.${$.POST_unit_parent1.response.body.unitId}"
          },
          {
            "title": "${$.POST_unit_parent2.response.body.title}",
            "unitLevel": "$EQ.${$.POST_unit_parent2.response.body.unitLevel}",
            "unitId": "$EQ.${$.POST_unit_parent2.response.body.unitId}"
          },
          {
            "title": "${$.POST_unit_child.response.body.title}",
            "parentId": "$EQ.${$.POST_unit_parent1.response.body.unitId}",
            "unitLevel": "$EQ.${$.POST_unit_child.response.body.unitLevel}",
            "unitId": "$EQ.${$.POST_unit_child.response.body.unitId}"
          }
        ]
      }
    },



    {
      "name": "PUT_unit",
      "url": "/unit/${$.POST_unit_child.response.body.unitId}",
      "operation": "PUT",
      "request": {
        "headers": {
          "Accept": "application/json;charset=UTF-8"
        },
        "body": {
          "title": "titleChanged",
          "parentId": "${$.POST_unit_parent2.response.body.unitId}",
          "unitLevel": 3
        }
      },
      "assertions": {
        "status": 200,
        "body":
          {
            "title": "${$.PUT_unit.request.body.title}",
            "unitLevel": "$EQ.${$.PUT_unit.request.body.unitLevel}",
            "unitId": "$EQ.${$.POST_unit_child.response.body.unitId}",
            "parentId": "$EQ.${$.POST_unit_parent2.response.body.unitId}"
          }
      }
    },


    {
      "name": "DELETE_unit",
      "url": "/unit/${$.POST_unit_child.response.body.unitId}",
      "operation": "DELETE",
      "request": {
      },
      "assertions": {
        "status": 200
      }
    },


    {
      "name": "GET_afterDelete",
      "url": "/unit",
      "operation": "GET",
      "request": {
      },
      "assertions": {
        "status": 200,
        "body": [
          {
            "title": "${$.POST_unit_parent1.response.body.title}",
            "unitLevel": "$EQ.${$.POST_unit_parent1.response.body.unitLevel}",
            "unitId": "$EQ.${$.POST_unit_parent1.response.body.unitId}"
          },
          {
            "title": "${$.POST_unit_parent2.response.body.title}",
            "unitLevel": "$EQ.${$.POST_unit_parent2.response.body.unitLevel}",
            "unitId": "$EQ.${$.POST_unit_parent2.response.body.unitId}"
          }
        ]
      }
    }
  ]
}